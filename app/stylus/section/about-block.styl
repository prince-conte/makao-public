        margin-bottom 100px
        padding-top 65px
        top 0px
            
        .sl-wrapper
            .sl-navigation
                button 
                    position: fixed;
                    bottom: 50%;
    
        
        .slick-next
            display none !important     
        
        .slick-slide
            margin 0 !important
            
            img
                display: block;
                margin-top: 20px;
                margin-left: -5px;
                border-top solid 20px #fff 
        
        .slick-track 
            position relative
            top 0
            left 0;
            display block
            width 100% !important
            transform translate3d(0px, 0px, 0px) !important

        
     
        article
            padding 0
                
            p
                width 100%
                margin 20px 0
                padding-right  0px
             
        
