.center-slide
    padding-bottom 0px
    min-height 100px
    
    .sl
        outline none
        background #1d1d1d
        position relative
        text-align center;
        
        img
            opacity .9
            
        .center-slide__txt
            abs(block,100%,auto,60px,0)
            z-index 999
            opacity 0
            m-speed(.8s)
                      
            h3
                text-align center
                color #fff
                
            .ico
                display inline-block
                width 110px
                height 112px
                bgP(center,center,contain)
                background url(../img/tur-i.png)
                
            .button-block
                margin-top 20px
                a.button
                    color #fff
                    border solid 2px #fff
                    margin 0 7px
                    background transparent
                    outline none
                    padding: 12px 40px;
                   
                    
                a.button:hover
                    background colfirm
                    color #fff
                    border solid 2px colfirm
                
    .slick-center
        .center-slide__txt
            opacity 1
        
        
    .slick-next
        position absolute
        width 58px
        height 58px
        border-radius 50%
        top 50%
        margin-top -29px
        right  7%
        margin-left -29px
        overflow hidden
        z-index 9999
        
        .phbg
            abs(block,100%,100%,0px,0px)
            background #000
            opacity .65
            border-radius 50%
            m-speed(0.3s)

            
        span 
            position absolute
            width 14px
            height 2px
            pov(45deg)
            top 23px
            left 23px
            background #fff
                
        span::before 
            content ''
            position absolute
            width 100%
            height 100%
            top 7px
            left 7px
            pov(-90deg)
            background #fff
            
                    
    .slick-prev
        position absolute
        width 58px
        height 58px
        border-radius 50%
        top 50%
        margin-top -29px
        left  7%
        margin-left -29px
        overflow hidden
        
        z-index 9999
        
        .phbg
            abs(block,100%,100%,0px,0px)
            background #000
            opacity .65
            border-radius 50%
            m-speed(0.3s)

            
        span 
            position absolute
            width 14px
            height 2px
            pov(225deg)
            top 33px
            left 21px
            background #fff
                
        span::before 
            content ''
            position absolute
            width 100%
            height 100%
            top 7px
            left 7px
            pov(-90deg)
            background #fff
            
            
    .slick-next:hover
        .phbg 
            opacity 1
            background colfirm     
            
                       
    .slick-prev:hover
        .phbg 
            opacity 1
            background colfirm     
            
            
            
     
@media (max-width: 1400px) and (min-width: 1280px)
    .center-slide 
        .sl .center-slide__txt 
            .ico 
                display: inline-block;
                width: 77px;
                height: 75px;
            
@media (max-width: 1279px) and (min-width: 1024px)
    .center-slide
        padding-bottom 35px
        .sl .center-slide__txt 
            .ico 
                display: inline-block;
                width: 71px;
                height: 65px;
                   
@media (max-width: 1023px) and (min-width: 768px)
    .center-slide 
        .sl .center-slide__txt 
            .ico 
                display: inline-block;
                width: 71px;
                height: 45px;
                          
@media (max-width: 767px)
    .center-slide
        padding-bottom 0px
        
        .slick-next
            position: absolute;
            width: 45px;
            height: 45px;
            border-radius: 50%;
            top: 40px;
            right: 10px;
            overflow: hidden;
            z-index: 9999;
            
            span
                top: 17px;
                left: 17px;
        
        .slick-prev
            display none !important

        
        .slick-slide
            margin: 0px !important;
            

        
        .sl 
            min-height: 300px;
            
            .center-slide__txt
                .button-block 
                    a.button 
                        color: #fff;
                        border: solid 1px #fff;
                        margin: 7px 7px;
                        background: transparent;
                        outline: none;
                        padding: 8px 30px;

            
            
            img
                height: 100%;
                width: auto !important;
            

            .center-slide__txt 
                .ico 
                    display: inline-block;
                    width: 71px;
                    height: 45px;
                
                
       